{
	"name": "better-moodle",
	"description": "A modern web-based file explorer with search and navigation",
	"author": "isneru",
	"version": "1.0.0",
	"main": "index.ts",
	"type": "module",
	"scripts": {
		"prod": "tsx index.ts",
		"dev": "tsx --trace-warnings --watch index.ts",
		"build": "tsc",
		"build-css": "npx @tailwindcss/cli -i ./src/styles/input.css -o ./src/styles/output.css",
		"watch-css": "npx @tailwindcss/cli -i ./src/styles/input.css -o ./src/styles/output.css --watch"
	},
	"keywords": [],
	"license": "ISC",
	"dependencies": {
		"@tailwindcss/cli": "^4.1.14",
		"archiver": "^7.0.1",
		"dotenv": "^17.2.3",
		"fastify": "^5.6.1"
	},
	"devDependencies": {
		"@types/archiver": "^7.0.0",
		"@types/node": "^24.6.2",
		"tailwindcss": "^4.1.14",
		"tsx": "^4.20.6"
	}
}
